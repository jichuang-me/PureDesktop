<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <!-- ─── Colors ─────────────────────────────────────────────── -->
    <Color x:Key="FenceBackgroundColor">#CC2D2D2D</Color>
    <Color x:Key="FenceBorderColor">#30FFFFFF</Color>
    <Color x:Key="FenceTitleBarColor">#CC383838</Color>
    <Color x:Key="TextPrimaryColor">#FFFFFFFF</Color>
    <Color x:Key="TextSecondaryColor">#FFB0B0B0</Color>
    <Color x:Key="AccentColor">#FF60CDFF</Color>
    <Color x:Key="HoverColor">#18FFFFFF</Color>
    <Color x:Key="ScrollBarColor">#50AAAAAA</Color>
    <Color x:Key="OverlayColor">#08FFFFFF</Color>
    <Color x:Key="ResizeGripColor">#40AAAAAA</Color>
    <Color x:Key="InputBackgroundColor">#FF383838</Color>
    <Color x:Key="InputHoverColor">#FF484848</Color>
    <Color x:Key="MenuBackgroundColor">#F22D2D2D</Color>
    <Color x:Key="MenuBorderColor">#40FFFFFF</Color>

    <!-- ─── Brushes ────────────────────────────────────────────── -->
    <SolidColorBrush x:Key="FenceBackground" Color="{StaticResource FenceBackgroundColor}" />
    <SolidColorBrush x:Key="FenceBorder" Color="{StaticResource FenceBorderColor}" />
    <SolidColorBrush x:Key="FenceTitleBar" Color="{StaticResource FenceTitleBarColor}" />
    <SolidColorBrush x:Key="TextPrimary" Color="{StaticResource TextPrimaryColor}" />
    <SolidColorBrush x:Key="TextSecondary" Color="{StaticResource TextSecondaryColor}" />
    <SolidColorBrush x:Key="Accent" Color="{StaticResource AccentColor}" />
    <SolidColorBrush x:Key="HoverBrush" Color="{StaticResource HoverColor}" />
    <SolidColorBrush x:Key="ScrollBarBrush" Color="{StaticResource ScrollBarColor}" />
    <SolidColorBrush x:Key="OverlayBrush" Color="{StaticResource OverlayColor}" />
    <SolidColorBrush x:Key="ResizeGripBrush" Color="{StaticResource ResizeGripColor}" />
    <SolidColorBrush x:Key="InputBackground" Color="{StaticResource InputBackgroundColor}" />
    <SolidColorBrush x:Key="InputHover" Color="{StaticResource InputHoverColor}" />
    <SolidColorBrush x:Key="MenuBackground" Color="{StaticResource MenuBackgroundColor}" />
    <SolidColorBrush x:Key="MenuBorder" Color="{StaticResource MenuBorderColor}" />

    <!-- ─── Values ─────────────────────────────────────────────── -->
    <CornerRadius x:Key="FenceCornerRadius">8</CornerRadius>
    <system:Double x:Key="FenceTitleFontSize">12</system:Double>
    <system:Double x:Key="ItemIconSize">36</system:Double>
    <system:Double x:Key="ItemFontSize">11</system:Double>
    <system:Double x:Key="ListItemIconSize">18</system:Double>
    <system:Double x:Key="ListItemFontSize">11.5</system:Double>
    <system:Double x:Key="ScrollBarWidth">4</system:Double>
    <system:Double x:Key="ScrollBarHoverWidth">6</system:Double>

</ResourceDictionary>
