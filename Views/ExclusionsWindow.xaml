<Window x:Class="PureDesktop.Views.ExclusionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Exclusion Rules" Width="500" Height="500"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        ResizeMode="NoResize" Topmost="True"
        ShowInTaskbar="False">
    
    <Border Background="#202020" CornerRadius="12" BorderBrush="#35FFFFFF" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            
            <!-- Custom Title Bar -->
            <Border Grid.Row="0" Background="#282828" CornerRadius="12,12,0,0" MouseLeftButtonDown="OnHeaderMouseDown">
                <Grid Margin="20,0">
                    <TextBlock Text="{DynamicResource Tab_Exclusions}" Foreground="White" VerticalAlignment="Center" FontWeight="SemiBold" FontSize="14"/>
                    <Button Content="î„Š" FontFamily="Segoe Fluent Icons" Click="OnCancel" HorizontalAlignment="Right" Background="Transparent" Foreground="White" BorderThickness="0" FontSize="12" Width="32" Height="32"/>
                </Grid>
            </Border>
            
            <ScrollViewer Grid.Row="1" Margin="24,16" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="{DynamicResource Exclude_Extensions}" Foreground="#B0B0B0" FontSize="13" Margin="0,0,0,8"/>
                    <TextBox x:Name="ExcludeExtBox" Foreground="White" Background="#303030" BorderBrush="#404040" 
                             Padding="10" FontSize="13" TextWrapping="Wrap" AcceptsReturn="False" Margin="0,0,0,24">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                    
                    <TextBlock Text="{DynamicResource Exclude_FilesFolders}" Foreground="#B0B0B0" FontSize="13" Margin="0,0,0,8"/>
                    <TextBox x:Name="ExcludeFileBox" Foreground="White" Background="#303030" BorderBrush="#404040" 
                             Padding="10" FontSize="13" Height="180" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                    
                    <TextBlock Text="{DynamicResource Msg_ExclusionRestart}" Foreground="{DynamicResource Accent}" 
                               FontSize="12" TextWrapping="Wrap" Margin="0,16,0,0" Opacity="0.8"/>
                </StackPanel>
            </ScrollViewer>
            
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="24,0,24,24">
                <Button Content="{DynamicResource Dlg_Cancel}" Click="OnCancel" Width="90" Height="34" Margin="0,0,12,0" 
                        Background="Transparent" Foreground="#B0B0B0" BorderThickness="0" Cursor="Hand"/>
                <Button Content="{DynamicResource Dlg_OK}" Click="OnOK" IsDefault="True" Width="100" Height="34" 
                        Background="{DynamicResource Accent}" Foreground="White" BorderThickness="0" Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
