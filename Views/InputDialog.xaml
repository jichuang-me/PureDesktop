<Window x:Class="PureDesktop.Views.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input" Width="380" Height="200" 
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        ResizeMode="NoResize" Topmost="True"
        ShowInTaskbar="False">
    
    <Border Background="#202020" CornerRadius="8" BorderBrush="#35FFFFFF" BorderThickness="1">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            
            <TextBlock x:Name="PromptText" Text="Please enter value:" Foreground="#FFFFFF" FontSize="15" FontWeight="SemiBold" Margin="0,0,0,16"/>
            
            <TextBox x:Name="InputBox" Grid.Row="1" Foreground="White" Background="#303030" 
                     BorderBrush="#404040" Padding="10,8" FontSize="14" VerticalAlignment="Top"
                     SelectionBrush="{DynamicResource Accent}"
                     CaretBrush="White">
                <TextBox.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>
            
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
                <Button Content="Cancel" Click="OnCancel" Width="80" Height="32" Margin="0,0,12,0" 
                        Background="Transparent" Foreground="#B0B0B0" BorderThickness="0" Cursor="Hand"/>
                <Button Content="OK" Click="OnOK" IsDefault="True" Width="80" Height="32" 
                        Background="{DynamicResource Accent}" Foreground="White" BorderThickness="0" Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
